$box-sizing
  box-sizing border-box

$block
  display block

$inblock
  display inline-block

$centered-container
  @extends $box-sizing
  center(980px)
  padding 2em
  overflow hidden

$left
  float left
  
$right
  float right

$clearfix
  zoom 1
  &::after
    clear both
    content " "
    display block
    font-size 0
    height 0
    visibility hidden
  
$txt-shadow
  text-shadow 1px 1px #C2C2C2

rem(value) {
  font-size: value;

  if (value is inherit) {
  } else {
    font-size: remify(value);
  }
}

remify(value) {
  u = unit(value);

  if (u is 'px') {
    return unit(value/16, 'rem');
  } else {
    return unit(value, u);
  }
}